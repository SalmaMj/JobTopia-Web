{% extends 'back.html.twig' %}


{% block title %}Statistiques des offres{% endblock %}


{% block content %}

    <canvas id="myChart"></canvas>

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>

        <script>
  var byMonthAccepted = {{ byMonthAccepted|json_encode|raw }};
var byMonthRefused = {{ byMonthRefused|json_encode|raw }};
var byMonthWaiting = {{ byMonthWaiting|json_encode|raw }};

// Génération du graphique
var ctx = document.getElementById('myChart').getContext('2d');
var myPieChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['En attente', 'Acceptées', 'Refusées'],
        datasets: [{
            data: [byMonthWaiting[4], byMonthAccepted[4], byMonthRefused[4]],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)'
            ],
            borderWidth: 1
        }]
    },
     
    });
</script>
    {% endblock %}
{% endblock %}