                              <h5 class="card-header d-flex justify-content-between align-items-center">
  <span>{{ offre.titre }}</span>
<button type="button" class="btn btn ml-auto" onclick="sauvegarderOffre({{ offre.id }})">
    <i id="icon-{{ offre.id }}" class="far fa-bookmark px-1"></i>
  </button>
</h5>
<script>
  function sauvegarderOffre(idOffre) {
    var xhr = new XMLHttpRequest();
    xhr.open('POST', `/${idOffre}/savedOffres`, true,false);
    xhr.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
    xhr.onload = function() {
      if (xhr.status === 200) {
        if (xhr.responseText === 'removed') {
          alert('Offre retirée de vos favoris!');
          document.getElementById('icon-'+idOffre).classList.remove('fas');
          document.getElementById('icon-'+idOffre).classList.add('far');
        } else {
          alert('Offre sauvegardée dans vos favoris!');
          document.getElementById('icon-'+idOffre).classList.remove('far');
          document.getElementById('icon-'+idOffre).classList.add('fas');
        }
      } else {
        alert('Une erreur est survenue. Veuillez réessayer plus tard.');
      }
    };
    xhr.send('id=' + idOffre);
  }
</script>


                                            <p class="card-text"><strong>Description:</strong> {{ offre.description|slice(0, 20) ~ '...' }}</p>
