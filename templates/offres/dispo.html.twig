       <div class="search-filters">
                        <div class="search-filter-item">
                        </div>
                        <div class="search-filter-item">
                            {{ form_start(form, {'attr': {'onsubmit': 'return true;'}}) }}
                            <div class=".search-container input">
                                <div class="search-field">
                                    {{ form_widget(form.search, {'attr': {'class': 'form-control mr-sm-2', 'aria-label': 'Search'}, 'onkeyup': 'submitForm()', 'id': 'search-field'}) }}
