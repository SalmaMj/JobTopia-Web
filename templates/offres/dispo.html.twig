<div class="pagination">
  {% set currentPage = pagination.getCurrentPageNumber() %}
  {% set totalPages = pagination.getTotalItemCount() / pagination.getItemNumberPerPage()|round(0, 'ceil') %}
  
  {% if currentPage > 1 %}
    <a href="{{ path('showDispoOffres', { page: currentPage - 1 }) }}" class="page-link"> <i class="fas fa-angle-left text-blue px-3"></i> Page Précédente</a>
  {% endif %}
  
  {% if currentPage < totalPages %}
    <a href="{{ path('showDispoOffres', { page: currentPage + 1 }) }}" class="page-link">Page Suivante <i class="fas fa-angle-right text-blue px-3"></i></a>
  {% endif %}
