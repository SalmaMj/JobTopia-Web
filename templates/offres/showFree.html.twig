{% extends 'free.html.twig' %}

{% block body %}

{% block stylesheets %}
 {{ parent() }}
 
    <link rel="stylesheet" href="{{ asset('bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

<style>
.container h1 {
  font-size: 24px;
  font-weight: 700;
  border-bottom: 2px solid #e0e0e0;
  padding-bottom: 10px;
  margin-bottom: 20px;
}

.similar-offres-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 50px;
}

.similar-offre-card {
  width: 100%;
  margin-bottom: 30px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.similar-offre-card:hover {
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
}

.similar-offre-card-image {
  height: 200px;
  background-size: cover;
  background-position: center;
}

.similar-offre-card-content {
  padding: 15px;
  flex-grow: 1;
}

.similar-offre-card-title {
  font-size: 20px;
  margin-bottom: 10px;
}

.similar-offre-card-date {
  font-size: 14px;
  margin-bottom: 10px;
  color: #777;
}

.similar-offre-card-description {
  font-size: 16px;
  line-height: 1.5;
  height: 100px;
  overflow: hidden;
  margin-bottom: 10px;
}

.similar-offre-card-link {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #007bff;
  text-align: right;
  margin-top: auto;
  padding: 15px;
  transition: all 0.2s ease;
}

.similar-offre-card-link:hover {
  color: #0056b3;
  text-decoration: none;
}
.similar-offres-title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px;
  position: relative;
}

.similar-offres-title::before {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 70px;
  height: 3px;
  background-color: #0056b3;
}

.page-title {
  margin-top: 40px;
  margin-bottom: 30px;
  font-size: 32px;
  font-weight: 700;
  color: #444;
  text-transform: uppercase;
  border-bottom: 2px solid #ddd;
  padding-bottom: 10px;
}
.btn-postuler {
  position: fixed;
  bottom: 400px;
  left: 50%;
  transform: translateX(-50%);
  transition: all 0.3s ease-in-out;
}
.btn-postuler:hover {
  bottom: 410px;
}
</style>
 {% endblock %}
{% block javascripts %}
    {{ parent() }}
   <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
     <script src="{{ asset('main.js') }}"></script>
   <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
 <script> 
$(window).scroll(function() {
  var scrollTop = $(this).scrollTop();

  if (scrollTop > 100) {
    $('.btn-postuler').addClass('active');
  } else {
    $('.btn-postuler').removeClass('active');
  }
});
</script>
{% endblock %}
<div class="container">
  <div class="row">
  
    <h1 class="page-title">{{ offre.titre }}</h1>
  </div>
  <div class="row">
    <h2 class="section-title">Descriptif du poste :</h2>
    <p>{{ offre.description }}</p>
  </div>

<div class="row">
   <div class="col-md-6">
    <a href="#" class="btn btn-primary btn-lg btn-block btn-postuler">Postuler</a>
  </div>
</div>

</div>
 <div class="row">
  <h2 class="similar-offres-title">Offres similaires</h2>
  <div class="similar-offres-container">
    {% if similaires is not empty %}
      {% for offer in similaires %}
        <div class="card mx-auto text-center mb-3 mt-5" style="max-width: 700px;">
                          <div class="row g-0">
         
            <h3 class="similar-offre-card-title">{{ offer.titre }}</h3>
            <p class="similar-offre-card-date">{{ offer.dl|date('d/m/Y') }}</p>
            <p class="similar-offre-card-description">{{ offer.description }}</p>
            <a href="{{ path('offres_free_show', {'offre': offer.id}) }}" class="similar-offre-card-link">Voir l'offre</a>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p>Aucune offre similaire trouv√©e.</p>
    {% endif %}
  </div>
</div>


    </div>
</div>
      </div>
{% endblock %}